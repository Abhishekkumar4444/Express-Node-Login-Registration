<%- include('./partials/header.ejs') %>
    <%- include('./partials/navbar.ejs') %>

        <div class="container p-4">
            <h1>Registertration Page</h1>
            <hr />
            <div class="row mt-5">
                <div class="col-sm-6">


                    <form method="post">
                        <div class="mb-3">
                            <label for="firstname" class="form-label">FirstName</label>
                            <input type="text" class="form-control" id="firstname" required placeholder="First Name.." name="firstname" />
                        </div>
                        <div class="mb-3">
                            <label for="email1" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required placeholder="Your email" />
                            <div id="emailHelp" class="form-text d-md-block d-none">
                                We'll never share your email with anyone else.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="phone" required placeholder="Must be 10 digit" />
                        </div>

                        <button type="submit" class="btn btn-primary">Register</button>
                        <!-- </form> -->
                </div>

                <div class="col-sm-6">
                    <!-- <form method="post"> -->
                    <div class="mb-3">
                        <label for="lastname" class="form-label">LastName</label>
                        <input type="text" class="form-control" id="lastname" aria-describedby="emailHelp" name="lastname" required placeholder="Last Name.. " />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password1" name="password" placeholder="Enter Password" required />
                        <div id="" class="form-text d-md-block d-none">
                            We'll never share your password with anyone else.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <textarea class="form-control" id="address" rows="3" name="address" placeholder="Enter your address here.."></textarea>
                    </div>
                    </form>
                </div>
            </div>
            <%- include('./partials/footer.ejs') %>
        </div>